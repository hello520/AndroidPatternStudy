<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lllazy.com.projectpatternstudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.UserLoginActivity" />
        <activity android:name=".mvc.LoadDataActivity" />
        <activity android:name=".mvvm.ChangeAgeActivity" />
        <activity android:name=".mvpdatabindind.MvpDataBindingActivity"/>
    </application>

</manifest>
